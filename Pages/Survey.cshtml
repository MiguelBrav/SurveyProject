@page
@model SurveyModel
@{
    ViewData["Title"] = "Survey";
}
<h1 class="text-primary">@ViewData["Title"]</h1>

<form asp-page="Survey">
    <div class="text-center">
        <img src="~/img/survey.png" class="w-25 h-25" asp-append-version="true" />
    </div>
    <div class="form-group">
        <label asp-for="Survey.Name"></label>
        <input class="form-control" required asp-for="Survey.Name" />
    </div>
    <div class="form-group">
        ¿Do you like home office?<br />
        <div class="form-check">
            <input class="form-check-input" type="radio" id="answerYes" value="true" asp-for="Survey.IsTrue" required>
            <label class="form-check-label" for="answerYes">
            Yes
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" id="answerNo" value="false" asp-for="Survey.IsTrue">
            <label class="form-check-label" for="answerNo">
            No
            </label>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Survey.Description"></label>
        <textarea class="form-control" required asp-for="Survey.Description"></textarea>
    </div>
    <div class="text-center mt-3">
        <input type="submit" value="Enviar" class="btn btn-primary" />
    </div>
</form>